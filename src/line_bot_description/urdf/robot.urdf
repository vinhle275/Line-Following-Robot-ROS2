<?xml version="1.0"?>
<robot name="giant_line_follower">

  <material name="orange"><color rgba="1 0.4 0.1 1"/></material>
  <material name="blue"><color rgba="0.2 0.2 1 1"/></material>
  <material name="white"><color rgba="1 1 1 1"/></material>
  <material name="red"><color rgba="1 0 0 1"/></material>
  <material name="green"><color rgba="0 1 0 1"/></material>

  <link name="base_footprint"/>
  
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry><box size="0.8 0.5 0.2"/></geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry><box size="0.8 0.5 0.2"/></geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.3" ixy="0" ixz="0" iyy="0.8" iyz="0" izz="1.0"/>
    </inertial>
  </link>
  <gazebo reference="base_link"><material>Gazebo/Orange</material></gazebo>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="left_wheel"/><origin xyz="0.0 0.28 0" rpy="-1.5708 0 0" /><axis xyz="0 0 1"/>
  </joint>
  <link name="left_wheel">
    <visual><geometry><cylinder radius="0.15" length="0.05"/></geometry><material name="blue"/></visual>
    <collision><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/></inertial>
  </link>
  <gazebo reference="left_wheel"><material>Gazebo/Blue</material><mu1>1.5</mu1><mu2>1.5</mu2></gazebo>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/><child link="right_wheel"/><origin xyz="0.0 -0.28 0" rpy="-1.5708 0 0" /><axis xyz="0 0 1"/>
  </joint>
  <link name="right_wheel">
    <visual><geometry><cylinder radius="0.15" length="0.05"/></geometry><material name="blue"/></visual>
    <collision><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
    <inertial><mass value="2.0"/><inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.02"/></inertial>
  </link>
  <gazebo reference="right_wheel"><material>Gazebo/Blue</material><mu1>1.5</mu1><mu2>1.5</mu2></gazebo>

  <joint name="caster_front_joint" type="fixed"><parent link="base_link"/><child link="caster_front"/><origin xyz="0.3 0 -0.10"/></joint>
  <link name="caster_front">
    <visual><geometry><sphere radius="0.05"/></geometry><material name="white"/></visual>
    <collision><geometry><sphere radius="0.05"/></geometry></collision>
    <inertial><mass value="0.5"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
  </link>
  <gazebo reference="caster_front"><mu1>0.01</mu1><mu2>0.01</mu2><material>Gazebo/White</material></gazebo>

  <link name="sonar_front_link"><visual><geometry><box size="0.05 0.05 0.05"/></geometry><material name="red"/></visual></link>
  <joint name="sonar_front_joint" type="fixed"><parent link="base_link"/> <child link="sonar_front_link"/> <origin xyz="0.4 0 0.1"/></joint>

  <link name="line_sensor_left"><visual><geometry><box size="0.01 0.01 0.01"/></geometry><material name="green"/></visual></link>
  <joint name="line_left_joint" type="fixed">
    <parent link="base_link"/> <child link="line_sensor_left"/> 
    <origin xyz="0.3 0.015 -0.12"/> 
  </joint>

  <link name="line_sensor_right"><visual><geometry><box size="0.01 0.01 0.01"/></geometry><material name="green"/></visual></link>
  <joint name="line_right_joint" type="fixed">
    <parent link="base_link"/> <child link="line_sensor_right"/> 
    <origin xyz="0.3 -0.015 -0.12"/> 
  </joint>

  <gazebo>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
        <topic>/cmd_vel</topic><odom_topic>/odom</odom_topic><tf_topic>/tf</tf_topic>
        <left_joint>left_wheel_joint</left_joint><right_joint>right_wheel_joint</right_joint>
        <wheel_separation>0.56</wheel_separation><wheel_diameter>0.3</wheel_diameter>
        <max_wheel_torque>20</max_wheel_torque><max_wheel_acceleration>1.0</max_wheel_acceleration>
    </plugin>
  </gazebo>

  <gazebo reference="sonar_front_link">
    <sensor name="sonar_front" type="ray">
      <pose>0 0 0 0 0 0</pose><visualize>true</visualize><update_rate>10</update_rate>
      <topic>sensors/sonar_front_raw</topic> <ray>
        <scan><horizontal><samples>5</samples><resolution>1</resolution><min_angle>-0.2</min_angle><max_angle>0.2</max_angle></horizontal></scan>
        <range><min>0.05</min><max>4.0</max></range>
      </ray>
    </sensor>
  </gazebo>

  <gazebo reference="line_sensor_left">
    <sensor name="line_left" type="ray">
      <pose>0 0 0 0 1.5708 0</pose><visualize>true</visualize><update_rate>50</update_rate>
      <topic>sensors/line_left_raw</topic> <ray>
        <scan><horizontal><samples>1</samples><resolution>1</resolution><min_angle>0</min_angle><max_angle>0</max_angle></horizontal></scan>
        <range><min>0.005</min><max>0.1</max></range> 
      </ray>
    </sensor>
  </gazebo>

  <gazebo reference="line_sensor_right">
    <sensor name="line_right" type="ray">
      <pose>0 0 0 0 1.5708 0</pose><visualize>true</visualize><update_rate>50</update_rate>
      <topic>sensors/line_right_raw</topic> <ray>
        <scan><horizontal><samples>1</samples><resolution>1</resolution><min_angle>0</min_angle><max_angle>0</max_angle></horizontal></scan>
        <range><min>0.005</min><max>0.1</max></range>
      </ray>
    </sensor>
  </gazebo>
</robot>